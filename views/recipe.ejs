<%- include('partials/header'); -%>
<%- include('partials/topmid'); -%>

    <div class="bottom align-items-center">
        <div id="carouselExample" class="carousel slide">


            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row recipe align-items-center">
                        <div class="bottom-left col">
                            <h1 class="bottom-title"><%=foodTitle%></h1>
                            <ul class="bottom-list">
                                <%for (let i = 0; i < foodRecipe.length; i++) {%>
                                <li><%=foodRecipe[i]%></li>
                                <%}%>
                            </ul>
                            <p class="bottom-text">Total Calories: <%=foodCalories%>g</p>
                        </div>
                        <div class="bottom-right col">
                            <img class="bottom-img" src="<%=foodImgUrl%>" alt="Food-Image">
                        </div>
                    </div>
                </div>

                <%for (let i = 0; i < addFoodTitle.length; i++) {%>
                <div class="carousel-item item">
                    <div class="row recipe align-items-center">
                        <div class="bottom-left col">
                            <h1 class="bottom-title"><%=addFoodTitle[i]%></h1>
                            <ul class="bottom-list">
                                <%for (let y = 0; y < addFoodRecipe[i].length; y++) {%>
                            <li><%=addFoodRecipe[i][y]%></li>
                            <%}%>
                            </ul>
                            <p class="bottom-text">Total Calories: <%=addFoodCalories[i]%>g</p>
                        </div>
                        <div class="bottom-right col">
                            <img class="bottom-img" src="<%=addFoodImgUrl[i]%>" alt="Food-Image">
                        </div>
                    </div>
                </div>
                <%}%>

            </div>
    

            <button class="carousel-control-prev bottom-button-left" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
            </button>

            <button class="carousel-control-next bottom-button-right" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>